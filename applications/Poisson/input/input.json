// Configuration options
{
    // Default encoding for text
    "encoding" : "UTF-8",
    
    // Plug-ins loaded at start-up
    "plug-ins" : [
        "python",
        "c++",
        "ruby"
        ],
        
    // mesh
    "mesh" : {
                "box" : {
                          "nx" : 6,
                          "ny" : 6,
                          "nz" : 0,
                          "xa" : 0.,
                          "xb" : 2.,
                          "ya" : 0.,
                          "yb" : 2.,
                          "za" : 0.,
                          "zb" : 0.,
                          "elem_type" : "Quad9"
                         }
             },
        
    // Tab indent size
    "indent" : { "length" : 3, 
                 "use_space": true 
               },
    
    // Properties
    "variable" : { "name" : "T", 
                   "fe_order" : "biquadratic"
                 },
    
    // MG Solver properties
    "mgsolver" : { "nlevels" : 4, 
                   "npresmoothing" : 1, 
                   "npostsmoothing" : 1, 
                   "smoother_type" : "gmres", 
                   "mgtype" : "V_cycle", 
                   "max_number_linear_iteration" : 6, 
                   "abs_conv_tol" : 1.e-09 
                 },
                 
     // smoother properties
     "smoother" : {
                    "ksp"     : "gmres",
                    "precond" : "ilu",
                    "rtol"    : 1.e-12,
                    "atol"    : 1.e-20,
                    "divtol"  : 1.e+50,
                    "max_its" : 4,
                    "vanka" : {
                                "vanka_block" : 4
                              }
                  },
                  
      // post processing
      "writer" : {
                    "format" : "vtk",
                    "order"  : "biquadratic"
                 }
}
